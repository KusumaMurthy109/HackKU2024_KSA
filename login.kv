<wordWindow>:
    wishlist_input : wishlist_input
    wishlist_name : wishlist_name
    FloatLayout: 
        Label: 
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.8} 
        TextInput: 
            id : wishlist_name 
            hint_text : "Enter Wish List Name: "
            multiline : False
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.8}
        Label: 
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.7} 
        TextInput: 
            id : wishlist_input 
            hint_text : "Enter Wish List: "
            multiline : True
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.68}
        
        Button: 
            text : "Update"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.50, "top" : 0.25} 
            on_press : 
                root.update_wishlist() 
                app.root.current = 'printwishlist'
                root.manager.transition.direction = "right"
        Button: 
            text : "Submit"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.50, "top" : 0.35} 
            on_press : 
                root.save_wishlist() 
                app.root.current = 'printwishlist'
                root.manager.transition.direction = "right"
        Button: 
            text : "Back"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.1, "top" : 0.1} 
            on_press : 
                app.root.current = 'createwish'
                root.manager.transition.direction = "left"

