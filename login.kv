        TextInput: 
            id : wishlist_name 
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.8}
        Label: 
            text : "Enter Wish List: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.7} 
        TextInput: 
            id : wishlist_input 
            multiline : True
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.45, "top" : 0.7}
        Button: 
            text : "SUBMIT"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.39, "top" : 0.28} 
            on_press : 
                root.save_wishlist() 
                root.manager.transition.direction = "right"
        
  
  
