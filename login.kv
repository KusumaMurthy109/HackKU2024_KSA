#:kivy 2.1.0
#:import hex kivy.utils.get_color_from_hex

<TestButton@Button>:
    font_size: 20
    background_color: 0, 0, 0, 0
    background_normal: ""
    canvas.before:
        Color:
            rgba: hex('#ECA1E7')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<loginWindow>:
    email: email
    pwd: pwd
    button: button
    FloatLayout:
        size: root.width, root.height
        Label:
            text: "Welcome to WishMate!"
            font_size: 50
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.93}
        Label:
            text: "Short Description"
            font_size: 30
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.89}

        Label:
            text: "Login"
            font_size: 50
            size_hint: 0.5, 0.05
            pos_hint: {"center_x": 0.5, "top": 0.8}
        Label:
            text: "Don't have an account? Sign up!"
            font_size: 30
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.79}

        TextInput:
            id: email
            hint_text: "Username/Email"
            size_hint: 0.3, 0.05
            pos_hint: {"center_x": 0.5, "top": 0.7}
        TextInput:
            id: pwd
            hint_text: "Password"
            size_hint: 0.3, 0.05
            pos_hint: {"center_x": 0.5, "top": 0.6}
            password: True
        TestButton: 
            id : button
            text : "Show"
            size_hint : 0.04, 0.04
            pos_hint : {"x" : 0.6, "center_y" : 0.575}
            on_press: root.togglevisibility()

        TestButton:
            text: "Login"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.45}
            on_press: root.validate()

        TestButton:
            text: "Create an account"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.3}
            on_release:
                app.root.current = 'signup'
                root.manager.transition.direction = "left"

<signupWindow>:
    first_name2: first_name2
    last_name2: last_name2
    email: email
    zipcode: zipcode
    pwd: pwd

    FloatLayout:
        Label:
            text: "Sign Up"
            font_size: 30
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.9}

        Label:
            text: "Fill in your details"
            size_hint: 0.5, 0.05
            pos_hint: {"center_x": 0.5, "top": 0.8}

        TextInput:
            id: first_name2
            hint_text: "First Name"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.7}

        TextInput:
            id: last_name2
            hint_text: "Last Name"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.6}

        TextInput:
            id: email
            hint_text: "Email"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.5}

        TextInput:
            id: zipcode
            hint_text: "Zip Code"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.4}

        TextInput:
            id: pwd
            hint_text: "Password"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.3}
            password: True

        TestButton:
            text: "Sign Up"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.15}
            on_press: root.signupbtn()

<logDataWindow>:
    info: info
    FloatLayout:
        Label:
            id: info
            text: "Successfully Logged In"
            font_size: 25
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.9}

        TestButton:
            text: "Back to Login"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.7}
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = "down"

        TestButton:
            text: "Create New Account"
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.5}
            on_release:
                app.root.current = 'signup'
                root.manager.transition.direction = "down"
